/* pages/index/index.wxss */
page {
  height: 100%;
  background-color: #8ed145;
}
.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}
button {
  font-size: 32rpx;
  border: 1rpx solid pink;
  background-color: pink;
}
.userName {
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0;
}
.goStudy {
  width: 200rpx;
  height: 80rpx;
  font-size: 28rpx;
  border: 1px solid red;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}