/* pages/movies/movies.wxss */
.moviesContainer {
  display: flex;
  margin: 20rpx;
}
.movieImg {
  width: 128rpx;
  height: 128rpx;
}
.movie_detail {
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx;
}
.movie_name {
  font-size: 32rpx;
  color: #000;
}
.movie_year {
  font-size: 28rpx;
  color: #666;
  margin: 8rpx 0;
}
.movie_director {
  font-size: 28rpx;
  color: #333;
}
.movie_rating {
  font-size: 40rpx;
  color: red;
  font-weight: bold;
}